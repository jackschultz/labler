<div class="row">
  <div class="col-md-12">
    <div>
      <h2><%= @survey.name %></h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div>
      <h4>Instructions</h4>
      <%= simple_format @survey.instructions %>
    </div>
  </div>
  <div class="col-md-5">
    <h3>Questions to be answered for each document</h3>
    <% @survey.questions.each do |question| %>
      <%= render "questions/#{question.question_type}_info", question: question %>
    <% end %>
  </div>
  <div class="col-md-3">
        <div class="row">
          <div class="col-md-12">
            <%= link_to 'Start with a random song', [@survey.random_document(current_user)], class: "btn btn-primary" %>
          </div>
        </div>
      <% if current_user %>
        <div class="row top-space">
          <div class="col-md-12">
            <h5><%= @survey.incomplete_document_count(current_user) %> / <%= @survey.documents.count %> songs left to complete</h5>
          </div>
        </div>
      <% end %>
  </div>
</div>
